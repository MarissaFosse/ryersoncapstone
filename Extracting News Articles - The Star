#Toronto Star

import requests
from bs4 import BeautifulSoup


URL = 'https://www.thestar.com/news/gta/2019/12/31/with-291-people-shot-2019-is-closing-as-torontos-bloodiest-year-on-record-for-overall-gun-violence.html'

page = requests.get(URL)

soup = BeautifulSoup(page.content, 'html.parser')

results = soup.find(id='body-content')

article = results.find_all('div', class_='c-article-body__content')

#Step 1: find all paragraphs

for paragraph in article:
    # Each paragraph is a new BeautifulSoup object.
    parg_elem = paragraph.find('p', class_='text-block-container')
    print(parg_elem.text.strip())
    print()
	
#above returns only first line


page = requests.get(URL)

soup = BeautifulSoup(page.content, 'html.parser')

results = soup.find(id='body-content')

article = results.find_all('div', class_='c-article-body__content')

#Step 1: find all paragraphs

for paragraph in article:
    parg_elem = paragraph.find_all('p', class_='text-block-container')
    print(str(len(parg_elem)))


#Step 2: extract all unordered list items

list_elem = paragraph.find('div', class_='text-block-container').ul
print(list_elem.text.strip())